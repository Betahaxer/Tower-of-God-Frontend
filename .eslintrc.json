{
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:react-hooks/recommended", "plugin:cypress/recommended"],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": ["react", "react-hooks", "cypress"],
    "rules": {
      //add customize rules here as per your project's needs
      "react/jsx-uses-react": "error",
      "react/jsx-uses-vars": "error",
    }
}  